{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
}